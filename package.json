{
  "name": "shirans-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Shirans portfolio website - Monorepo with client and server",
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "scripts": {
    "start": "npm run start -w server && npm run start -w client",
    "dev": "concurrently \"npm run dev -w shared\" \"npm run dev -w client\" \"npm run dev -w server\"",
    "build": "npm run build -w shared && npm run build -w client && npm run build -w server",
    "dev:client": "npm run dev -w client",
    "dev:server": "npm run dev -w server",
    "build:client-for-deploy": "npm run build -w shared && npm run build -w client",
    "lint": "npm run lint --workspaces",
    "lint:client": "npm run lint -w client",
    "lint:server": "npm run lint -w server",
    "install:all": "npm install",
    "type-check": "npm run type-check -w server",
    "prisma:generate": "npm run prisma:generate -w server",
    "prisma:migrate": "npm run prisma:migrate -w server",
    "prisma:studio": "npm run prisma:studio -w server",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "overrides": {
    "hono": "^4.11.7",
    "lodash": "^4.17.21"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}

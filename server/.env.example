# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/shirans_db?schema=public

# CORS Configuration
CORS_ORIGIN=http://localhost:5174

# JWT Configuration
# Secret key for signing JWT tokens - MUST be at least 32 characters in production
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-characters
# Access token expiration time - format: https://github.com/vercel/ms
# Examples: "15m", "1h", "7d", "30d"
# Recommended: Short-lived (15m-1h) for better security
JWT_EXPIRES_IN=15m
# Refresh token expiration time - format: "7d", "30d", "90d"
# Recommended: Longer-lived (7-30 days) for better UX
JWT_REFRESH_EXPIRES_IN=7d

# Password Hashing Configuration
# Number of salt rounds for bcrypt password hashing (default: 12)
# Higher values = more secure but slower (12 is a good balance)
# Range: 4-31 (recommended: 10-12 for most applications)
BCRYPT_SALT_ROUNDS=12

# Cookie Configuration
# Secure flag for cookies (true = HTTPS only, false = allow HTTP in development)
# Set to true in production for security
COOKIE_SECURE=false
# SameSite cookie attribute (strict, lax, or none)
# strict = best CSRF protection, lax = allows some cross-site requests, none = requires secure=true
COOKIE_SAME_SITE=strict
# Cookie domain (leave empty for current domain, set for subdomain sharing)
# Example: .example.com (note the leading dot for subdomain sharing)
COOKIE_DOMAIN=
